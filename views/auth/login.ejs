<div class = 'login'>

<h2>Login</h2>
<h4>Please login to view your account</h4>
<form action="/login" method="POST">
  <div class="form-group">
    <label for="authEmail"></label>
    <input id="authEmail" class="form-control" type="email" placeholder='EMAIL' name="email">
  </div>

  <div class="form-group">
    <label for="authPassword"></label>
    <input id="authPassword" class="form-control" type="password" name="password" placeholder = 'PASSWORD'>
  </div>

  <input class="btn btn-primary" type="submit">
</form>

</div>
